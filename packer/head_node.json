{
    "variables": {
      "image_id": "{{env `BASE_IMAGE`}}"
    },
    "builders": [
        {
            "flavor": "m1.medium",
            "image_name": "cluster in a box head node",
            "source_image": "{{user `image_id`}}",
            "ssh_username": "ubuntu",
            "use_floating_ip": "true",
            "floating_ip_pool": "nova",
            "type": "openstack",
            "security_groups": "ssh"
        }
    ],
    "provisioners": [
        {   
           "type": "file",
           "source": "data/head-run-anisble.sh",
           "destination": "/tmp/head-run-anisble.sh"
        },
        {
             "type": "ansible-local",
             "playbook_file": "ansible/head.yml"
        }
    ]
}
